{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build binary",
			"type": "cargo",
			"command": "objcopy",
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "build",
			"args": [

				//"--release",
				//"--bin", "rtic-test", "--", "-O", "binary", "app.bin"
				"--bin", "rtic-demo-ethernet", "--", "-O", "binary", "app.bin"
				//"--release", "--", "-O", "binary", "app.bin"
			],
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "Monitor",
			"type": "shell",
			"command": "plink",
			"args": [ "-serial", "COM5", "-sercfg", "115200,8,n,1,N" ],
			"presentation": {"echo": false, "clear": true },
			"dependsOn": ["DHCP Build"]
		},
	]
}